{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:playwright/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "playwright"
    ],
    "rules": {
        "no-console": "warn",
        "playwright/no-wait-for-timeout": "off",
        "playwright/no-networkidle": 0,
        "playwright/expect-expect": [
            "error",
            {
                "assertFunctionNames": [
                    "login"
                ]
            }
        ],
        "@typescript-eslint/no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ]
    }
}